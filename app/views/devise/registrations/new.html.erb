<div class="card shadow-lg p-4" style="width: 100%; max-width: 500px;">
  <h2 class="text-center mb-4">Cadastro</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, "E-mail", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Digite seu e-mail" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Senha", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Crie uma senha" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "ConfirmaÃ§Ã£o de Senha", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirme sua senha" %>
    </div>

    <div class="d-grid">
      <%= f.submit "Cadastrar", class: "btn btn-success" %>
    </div>
  <% end %>

  <hr>
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
