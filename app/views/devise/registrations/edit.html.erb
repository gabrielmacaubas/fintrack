                    </div>

                    <div class="d-grid">
                      <%= f.submit "Atualizar Informa√ß√µes", class: "btn btn-primary btn-lg" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- Painel Lateral -->
            <div class="col-lg-4">
              <div class="row g-3">
                <!-- Resumo da Conta -->
                <div class="col-12">
                  <div class="card bg-dark border-primary">
                    <div class="card-header bg-info text-dark border-0">
