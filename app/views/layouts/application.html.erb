            </ul>
        </nav>
    </div>

    <!-- Sidebar Overlay (for mobile) -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <!-- Top Navbar -->
        <nav class="top-navbar d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary sidebar-toggle me-3" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <div class="currency-ticker" id="currencyTicker">
                    <div class="currency-display">
                        <span class="currency-symbol">InformaÃ§Ãµes do Mercado ðŸš€ &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</span>
                        <span class="currency-symbol" id="currencySymbol">USD</span>
                        <span class="currency-separator">:</span>
                        <span class="currency-value" id="currencyValue">Loading...</span>
                        <span class="currency-trend" id="currencyTrend"></span>
                    </div>
                </div>
            </div>

            <div class="dropdown user-dropdown">
                <button class="btn btn-link dropdown-toggle d-flex align-items-center text-decoration-none" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="user-avatar me-2">
                        <% if current_user %>
