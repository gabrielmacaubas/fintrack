                    <% end %>
                </li>
                <li class="nav-item">
                    <%= link_to incomes_path, class: "nav-link #{'active' if controller_name == 'incomes'}" do %>
                    <i class="bi bi-graph-up me-2" style="color: green;"></i>
                    Receitas
                    <% end %>
                </li>
                <li class="nav-item">
                    <%= link_to expenses_path, class: "nav-link #{'active' if controller_name == 'expenses'}" do %>
                    <i class="bi bi-graph-down me-2" style="color: red;"></i>
                    Despesas
                    <% end %>
                </li>
                <li class="nav-item">
                    <%= link_to categories_path, class: "nav-link #{'active' if controller_name == 'categories'}" do %>
                    <i class="bi bi-pie-chart me-2"></i>
                    Categorias
                    <% end %>
                </li>
                <li class="nav-item">
                    <%= link_to settings_path, class: "nav-link #{'active' if controller_name == 'settings'}" do %>
                    <i class="bi bi-gear me-2"></i>
                    ConfiguraÃ§Ãµes
                    <% end %>
                </li>
                <li class="nav-item mt-3 border-top pt-3">
                    <%= link_to destroy_user_session_path, 
                        method: :delete,
                        data: { 
