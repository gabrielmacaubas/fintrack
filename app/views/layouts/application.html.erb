                    </div>
                    <span class="text-light">
                        <%= current_user&.full_name || current_user&.email || "User" %>
                    </span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><%= link_to "Perfil", "#", class: "dropdown-item" %></li>
                    <li><%= link_to "ConfiguraÃ§Ãµes", settings_path, class: "dropdown-item" %></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <% if current_user %>
                    <li>
                        <%= link_to destroy_user_session_path, 
                            method: :delete,
                            data: { 
                              confirm: "Tem certeza que deseja sair?",
                              turbo_method: :delete
                            },
                            class: "dropdown-item text-danger" do %>
                        <i class="bi bi-box-arrow-right me-2"></i>Sair
                        <% end %>
                    </li>
                    <% else %>
                    <li><%= link_to "Entrar", new_user_session_path, class: "dropdown-item" %></li>
                    <% end %>
                </ul>
            </div>
        </nav>
        <% end %>

        <!-- Page Content -->
        <% if devise_controller? %>
        <div class="container-fluid p-4 d-flex align-items-center justify-content-center min-vh-100 bg-dark">
        <% else %>
        <div class="container-fluid p-4 bg-dark">
        <% end %>
            <!-- Flash Messages -->
            <div class="position-fixed bottom-0 start-0 p-3" style="z-index: 1100;">
            <% if notice %>
                <div class="alert alert-success alert-dismissible fade show shadow" role="alert">
                <%= notice %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% end %>

            <% if alert %>
                <div class="alert alert-danger alert-dismissible fade show shadow" role="alert">
                <%= alert %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% end %>
            </div>
            <%= yield %>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebarOverlay = document.getElementById('sidebarOverlay');
            const currencySymbol = document.getElementById('currencySymbol');
            const currencyValue = document.getElementById('currencyValue');
            const currencyTrend = document.getElementById('currencyTrend');

            // Currency rotation configuration
            const currencies = [
                { code: 'USD', name: 'DÃ³lar', symbol: '$'},
                { code: 'EUR', name: 'Euro', symbol: 'â‚¬' },
                { code: 'GBP', name: 'Libra', symbol: 'Â£' },
                { code: 'JPY', name: 'Iene', symbol: 'Â¥' },
                { code: 'CAD', name: 'DÃ³lar Canadense', symbol: 'CAD' },
                { code: 'AUD', name: 'DÃ³lar Australiano', symbol: 'AUD' }
            ];

            let currentCurrencyIndex = 0;
            let previousRates = {};

            // Function to fetch exchange rates
            async function fetchExchangeRates() {
                try {
                    // Using exchangerate-api.com (free tier allows 1500 requests/month)
                    const response = await fetch('https://api.exchangerate-api.com/v4/latest/BRL');
                    const data = await response.json();
                    return data.rates;
                } catch (error) {
                    console.error('Error fetching exchange rates:', error);
                    // Fallback to mock data if API fails
                    return {
                        USD: 0.18,
                        EUR: 0.16,
                        GBP: 0.14,
                        JPY: 27.5,
                        CAD: 0.25,
                        AUD: 0.27
                    };
                }
            }

            // Function to format currency value
            function formatCurrencyValue(rate, currencyCode) {
                if (currencyCode === 'JPY') {
                    return rate.toFixed(1);
                }
                return rate.toFixed(4);
            }

            // Function to determine trend
            function getTrend(currentRate, previousRate) {
                if (!previousRate) return { class: '', symbol: '' };
                
                if (currentRate > previousRate) {
                    return { class: 'up', symbol: 'â–²' };
                } else if (currentRate < previousRate) {
                    return { class: 'down', symbol: 'â–¼' };
                }
                return { class: '', symbol: '' };
            }

            // Function to update currency display
            async function updateCurrencyDisplay() {
                const rates = await fetchExchangeRates();
                const currentCurrency = currencies[currentCurrencyIndex];
                const rate = rates[currentCurrency.code];
                
                if (rate) {
                    const formattedRate = formatCurrencyValue(rate, currentCurrency.code);
                    const previousRate = previousRates[currentCurrency.code];
                    const trend = getTrend(rate, previousRate);
                    
                    // Update display with animation
                    if (currencyValue) currencyValue.style.opacity = '0';
                    if (currencySymbol) currencySymbol.style.opacity = '0';
                    
                    setTimeout(() => {
                        if (currencySymbol) currencySymbol.textContent = `1 BRL = ${currentCurrency.symbol}`;
                        if (currencyValue) currencyValue.textContent = formattedRate;
                        
                        // Update trend indicator
                        if (currencyTrend) {
                            currencyTrend.textContent = trend.symbol;
                            currencyTrend.className = `currency-trend ${trend.class}`;
                        }
                        
                        if (currencyValue) currencyValue.style.opacity = '1';
                        if (currencySymbol) currencySymbol.style.opacity = '1';
                    }, 150);
                    
                    // Store current rate for next comparison
                    previousRates[currentCurrency.code] = rate;
                }
            }

            // Function to rotate to next currency
            function rotateCurrency() {
                currentCurrencyIndex = (currentCurrencyIndex + 1) % currencies.length;
                updateCurrencyDisplay();
            }

            // Initialize currency ticker
            updateCurrencyDisplay();

            // Rotate currency every 4 seconds
            setInterval(rotateCurrency, 4000);

            // Update rates every 30 seconds
            setInterval(updateCurrencyDisplay, 30000);

            // Sidebar toggle functionality
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('show');
                    sidebarOverlay.classList.toggle('show');
                });
            }

            // Close sidebar when clicking overlay
            if (sidebarOverlay) {
                sidebarOverlay.addEventListener('click', function() {
                    sidebar.classList.remove('show');
                    sidebarOverlay.classList.remove('show');
                });
            }

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(e) {
                if (window.innerWidth <= 768 && sidebar && sidebarToggle) {
                    if (!sidebar.contains(e.target) && !sidebarToggle.contains(e.target)) {
                        sidebar.classList.remove('show');
                        sidebarOverlay.classList.remove('show');
                    }
                }
            });

            // Handle window resize
            window.addEventListener('resize', function() {
                if (window.innerWidth > 768 && sidebar && sidebarOverlay) {
                    sidebar.classList.remove('show');
                    sidebarOverlay.classList.remove('show');
                }
            });

            // Click on currency ticker to manually rotate
            const currencyTicker = document.getElementById('currencyTicker');
            if (currencyTicker) {
                currencyTicker.addEventListener('click', function() {
                    rotateCurrency();
                });
            }
        });
    </script>
  </body>
</html>
