<% content_for :title, "Nova Despesa - FinTrack" %>

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="text-light mb-1">
        <i class="bi bi-plus-circle me-2 text-danger"></i>
        Nova Despesa
      </h1>
      <p class="text-muted mb-0">Registre um novo gasto</p>
    </div>
    <%= link_to expenses_path, class: "btn btn-outline-light" do %>
      <i class="bi bi-arrow-left me-1"></i> Voltar
    <% end %>
  </div>

  <!-- Form -->
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <%= render "form", expense: @expense %>
    </div>
  </div>
