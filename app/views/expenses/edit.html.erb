<% content_for :title, "Editar Despesa - FinTrack" %>

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="text-light mb-1">
        <i class="bi bi-pencil me-2 text-warning"></i>
        Editar Despesa
      </h1>
      <p class="text-muted mb-0">Modifique os dados desta despesa</p>
    </div>
    <div class="d-flex gap-2">
      <%= link_to @expense, class: "btn btn-outline-danger" do %>
        <i class="bi bi-eye me-1"></i> Ver Detalhes
      <% end %>
      <%= link_to expenses_path, class: "btn btn-outline-light" do %>
        <i class="bi bi-arrow-left me-1"></i> Voltar
      <% end %>
    </div>
  </div>

  <!-- Form -->
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <%= render "form", expense: @expense %>
    </div>
  </div>
